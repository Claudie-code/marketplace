doctype html
html
  head
    meta(name='viewport', content='width=device-width')
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    link(rel="stylesheet", href="/email.css", data-inline)
  body
    h2= "Thank you for your order - Order No " + noOrder
    h3= "Shipping Address"
    p= user.first + ' ' + user.last
    p= user.address
    p= user.city
    table
      thead
        tr  
          th= 'Product'
          th= 'Quantity'
          th= 'Price'
      tbody
        each item in items
          tr
            td
              figure
                div
                  img(src=item.image alt=item.name)
                figcaption
                  p= item.name
            td
              p= item.quantity
            td
              p= '$' + item.price.$numberDecimal
    h2= 'Total : $' + total
